// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Building {
  CUC
  GHC
  TEP
}

enum Category {
  CHARGER
  LAPTOP
  PHONE
  TABLET
  HEADPHONE_CASE
  EYEWARE_CASE
  CLOTHING
  JEWELRY
  WATCH
  UMBRELLA
  BEVERAGE_CONTAINER
  OTHER
}

enum ItemInteraction {
  CREATE
  APPROVE
  UNAPPROVE
  PUBLISH
  UNPUBLISH
  MAKE_AVAILABLE
  MAKE_UNAVAILABLE
  EDIT
  DELETE
  ARCHIVE
  UNARCHIVE
}

enum Status {
  PUBLISHED
  AVAILABLE
  APPROVED
  ARCHIVED
}

enum Value {
  LOW
  MEDIUM
  HIGH
}

model Item {
  id               String     @id @default(auto()) @map("_id") @db.ObjectId
  name             String
  imageURL         String?
  shortDescription String
  longDescription  String?
  foundBuilding    Building
  foundDescription String?
  foundDate        DateTime
  retrieveBuilding Building
  value            Value
  categories       Category[]
  status           Status
  auditLog         AuditLog[]
}

model ItemInfoSnapshot {
  id               String     @id @default(auto()) @map("_id") @db.ObjectId
  name             String
  imageURL         String?
  shortDescription String
  longDescription  String?
  foundBuilding    Building
  foundDescription String?
  foundDate        DateTime
  retrieveBuilding Building
  value            Value
  categories       Category[]
  status           Status
  auditLog         AuditLog   @relation(fields: [auditLogId], references: [id], onDelete: Cascade)
  auditLogId       String     @unique @db.ObjectId
}

model AuditLog {
  id          String            @id @default(auto()) @map("_id") @db.ObjectId
  interaction ItemInteraction
  actor       User              @relation(fields: [actorId], references: [id], onDelete: Cascade)
  actorId     String            @db.ObjectId
  item        Item              @relation(fields: [itemId], references: [id], onDelete: Cascade)
  itemId      String            @db.ObjectId
  change      ItemInfoSnapshot?
  changeId    String?
}

model Permission {
  id          String          @id @default(auto()) @map("_id") @db.ObjectId
  interaction ItemInteraction
  actor       User            @relation(fields: [actorId], references: [id], onDelete: Cascade)
  actorId     String          @db.ObjectId
  building    Building
}

model Subscription {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  userId   String   @db.ObjectId
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  category Category
}

model Account {
  id                String  @id @default(auto()) @map("_id") @db.ObjectId
  userId            String  @db.ObjectId
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.String
  access_token      String? @db.String
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.String
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  sessionToken String   @unique
  userId       String   @db.ObjectId
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String         @id @default(auto()) @map("_id") @db.ObjectId
  name          String?
  email         String?        @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  auditLogs     AuditLog[]
  permissions   Permission[]
  subscriptions Subscription[]
}

model VerificationToken {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
