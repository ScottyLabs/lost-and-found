enum ItemInteraction {
  CREATE
  APPROVE
  UNAPPROVE
  ARCHIVE
  UNARCHIVE
  EDIT
  DELETE
}

enum Status {
  PENDING
  APPROVED
  ARCHIVED
}

enum Value {
  LOW
  MEDIUM
  HIGH
}

enum Permission {
  USER
  MODERATOR
  ADMIN
}

